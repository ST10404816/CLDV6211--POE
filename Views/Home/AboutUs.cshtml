@model int

@{
    ViewData["Title"] = "AboutUs";
}

 <head>
  
  <meta name="viewport" content="width=device-width,initial-scale=1"> 
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  @*(W3Schools, 2024).*@
  <link rel="preconnect" href="https://fonts.googleapis.com"> 
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> 
  <link href="https://fonts.googleapis.com/css2?family=Parisienne&amp;display=swap" rel="stylesheet">
  @*(Googlefonts, 2024).*@

  <style>
        /*Google font for heading*/
       .parisienne-regular {
        font-family: "Parisienne", cursive;
        font-weight: 400;
        font-style: normal;
        }
        /*(Googlefonts, 2024).*/

        /*Main Heading Style*/
        h2 {
            color: #B9A837;
            font-size: 35px;
            text-align: center;
        }
        /*(W3Schools, 2024).*/

        /*Sub Heading Style*/
        h3 {
           font-family: Bookman, URW Bookman L, serif;
            color: #72A4A2;
            font-size: 20px;
            text-align: center;
        }
        /*(W3Schools, 2024).*/

        /*Content Style*/
        p {
          text-align: center;
          font-family: Arial, Helvetica, sans-serif;
          font-size: 18px;
        }
        /*(W3Schools, 2024).*/

        /*Image Size*/
        .custom-image-size {
            width: 100%;
            height: 300px;
        }
        /*(W3Schools, 2024).*/
        
  </style> 
</head>

<body>
    <h2 class="parisienne-regular"><b>About Us</b></h2> 
      <div class="w3-cell-row"> 

           @*Image 1*@
           <div class="w3-container w3-white w3-cell w3-cell-middle">
           <img src="~/Images/image1.jpeg" alt="image1" class="custom-image-size">
           </div>
           @*(W3Schools, 2024).*@

           @*Image 2*@
           <div class="w3-container w3-white w3-cell w3-cell-middle"> 
           <img src="~/Images/image2.jpeg" alt="image2" class="custom-image-size"> 
           </div>
           @*(W3Schools, 2024).*@

           @*Image 2*@
           <div class="w3-container w3-white w3-cell w3-cell-middle"> 
           <img src="~/Images/image3.jpeg" alt="image3" class="custom-image-size"> 
           </div>
            @*(W3Schools, 2024).*@

      </div> 

      @*Content*@
      <div> 
           <h3><b>Our Vision</b></h3> 
           <p> Our vision is rooted in empowering artisans and providing them with a sustainable livelihood while also presenting customers with a thoughtfully curated collection of handcrafted treasures. </p> 
           
           <h3><b>Accessibility</b></h3> 
           <p>KhumaloCraft Emporium prides itself on being accessible to people from all around the world. Sharing the value of unique crafts by talented artisans.</p> 
           
           <h3><b>Trustworthy</b></h3> 
           <p>We recognize the significance of trust and security in online shopping, and that's why we have taken measures to create a safe and secure shopping environment.</p> 
      </div>
      @*(W3Schools, 2024).*@
 </body>
