@model int

@{
    ViewData["Title"] = "ContactUs";
}

 <head>
      <meta name="viewport" content="width=device-width,initial-scale=1"> 
      <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
        @*(W3Schools, 2024).*@
      <link rel="preconnect" href="https://fonts.googleapis.com"> 
      <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> 
      <link href="https://fonts.googleapis.com/css2?family=Parisienne&amp;display=swap" rel="stylesheet">
        @*(Googlefonts, 2024).*@

  <style>
        /*Google font for heading*/
       .parisienne-regular {
        font-family: "Parisienne", cursive;
        font-weight: 400;
        font-style: normal;
        }
        /*(Googlefonts, 2024).*/

        /*Heading Style*/
        h2 {
            color: #B9A837;
            font-size: 35px;
            text-align: center;
        }
        /*(W3Schools, 2024).*/

        /*Subheading format*/
        h3 {
           font-family: Bookman, URW Bookman L, serif;
            color: #72A4A2;
            font-size: 18px;
            text-align: center;
        }
        /*(W3Schools, 2024).*/

        /*Content Style*/
        p {
          text-align: center;
          font-family: Arial, Helvetica, sans-serif;
          font-size: 18px;
        }
        /*(W3Schools, 2024).*/

        /*Image Size*/
        .custom-image-size {
            width: 2%;
            height: 22px;
        }
        /*(W3Schools, 2024).*/
        
    </style> 
  </head>

  <body>
      <h2 class="parisienne-regular"><b>Contact Us</b></h2>

        @*Contact Information*@
      <div>
          <p><img src="~/Images/cell.png" alt="CellIcon" class="custom-image-size"> Cell: (+27) 897 989 6732</p>
          <p><img src="~/Images/landline.png" alt="LandlineIcon" class="custom-image-size"> Landline: (+27) 897 989 6732</p>
          <p><img src="~/Images/email .png" alt="Email" class="custom-image-size"> Email: KhumaloCraftEmporium@gmail.com</p>
          <p><img src="~/Images/clock.png" alt="TradingHours" class="custom-image-size"> Trading hours: Mon-Fri 10:00 - 18:00</p>
      </div>
       @*(W3Schools, 2024).*@

        @*Location.*@
      <div>
        <p><img src="~/Images/Location.png" alt="Location"></p>
        <p>Location: 123 Main Road, Woodstock, Cape Town</p>  
      </div>
        @*(W3Schools, 2024).*@

        <h3>Our support team is always available to help, please reach out if you experience any inconvenience.</h3>
 </body>

